#include <iostream>
using namespace std 

int main() {
  int figura;

  // Solicitar número de figura
  cout << "Ingrese un número de figura (1-5): ";
  cin >> figura;

  // Determinar la figura geométrica
  switch (figura) {
    case 1:
      cout << "Cuadrado";
      break;
    case 2:
      cout << "Triángulo";
      break;
    case 3:
      cout << "Círculo";
      break;
    case 4:
      cout << "Rectángulo" ;
      break;
    case 5:
      cout << "Pentágono";
      break;
    default:
      cout << "Número inválido. Debe ser entre 1 y 5.";
      break;
  }

  return 0;
}
